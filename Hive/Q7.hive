DROP TABLE IF EXISTS MOVIES;
CREATE TABLE MOVIES (MOVIE_ID INT, TITLE STRING, GENRE STRING) PARTITIONED BY (MONTH STRING)ROW FORMAT DELIMITED FIELDS TERMINATED BY '\;';
LOAD DATA LOCAL INPATH 'January.dat' INTO TABLE MOVIES PARTITION(MONTH= 'January');
LOAD DATA LOCAL INPATH 'February.dat' INTO TABLE MOVIES PARTITION(MONTH= 'February');
LOAD DATA LOCAL INPATH 'March.dat' INTO TABLE MOVIES PARTITION(MONTH= 'March');
SELECT * FROM MOVIES WHERE MONTH='March';